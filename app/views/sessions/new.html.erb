<h1>ログイン</h1>

<%= form_with(url: login_path, scope: :session, local: true) do |f| %>

  <div>
    <%= f.label :email, 'メール' %>
    <%= f.email_field :email %>
  </div>
      
  <div>
    <%= f.label :password, 'パスワード' %>
    <%= f.password_field :password %>
  </div>

  <%= f.submit 'ログイン' %>
<% end %>

<p>ユーザの新規登録：<%= link_to '新規登録', signup_path %></p>
